{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vnetName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 64,
      "metadata": {
        "description": "The name of the hub VNet."
      }
    },
    "vnetResourceGroup": {
      "type": "string",
      "minLength": 1,
      "maxLength": 90,
      "metadata": {
        "description": "The resource group of the hub VNet."
      }
    },
    "subnetName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 80,
      "metadata": {
        "description": "The name of the subnet for the private endpoint and SLB."
      }
    },
    "dnsResolverSubnetName": {
      "type": "string",
      "defaultValue": "snet-dns-outbound",
      "metadata": {
        "description": "The name of the subnet for DNS resolver outbound endpoint (must be delegated to Microsoft.Network/dnsResolvers)."
      }
    },
    "onPremDatabaseIP": {
      "type": "string",
      "minLength": 7,
      "maxLength": 15,
      "metadata": {
        "description": "The private IP address of the on-premise database."
      }
    },
    "onPremDomainName": {
      "type": "string",
      "metadata": {
        "description": "The private domain name of the on-premise network (e.g., corp.local)."
      }
    },
    "onPremDNSServerIP1": {
      "type": "string",
      "minLength": 7,
      "maxLength": 15,
      "metadata": {
        "description": "The IP address of the first on-premise DNS server."
      }
    },
    "onPremDNSServerIP2": {
      "type": "string",
      "minLength": 7,
      "maxLength": 15,
      "metadata": {
        "description": "The IP address of the second on-premise DNS server."
      }
    },
    "databasePort": {
      "type": "int",
      "defaultValue": 1433,
      "minValue": 1,
      "maxValue": 65535,
      "metadata": {
        "description": "The port of the on-premise database (default: 1433 for SQL Server, use 3306 for MySQL, 1521 for Oracle)."
      }
    },
    "privateLinkServiceAlias": {
      "type": "string",
      "defaultValue": "snowflake-pls",
      "metadata": {
        "description": "A descriptive alias for the Private Link Service. Note: Azure generates a system alias for Snowflake configuration."
      }
    }
  },
  "variables": {
    "location": "[resourceGroup().location]",
    "subnetId": "[resourceId(parameters('vnetResourceGroup'), 'Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('subnetName'))]",
    "dnsResolverSubnetId": "[resourceId(parameters('vnetResourceGroup'), 'Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('dnsResolverSubnetName'))]",
    "vnetId": "[resourceId(parameters('vnetResourceGroup'), 'Microsoft.Network/virtualNetworks', parameters('vnetName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Network/loadBalancers",
      "apiVersion": "2023-05-01",
      "name": "snowflake-onprem-slb",
      "location": "[variables('location')]",
      "sku": {
        "name": "Standard"
      },
      "properties": {
        "frontendIPConfigurations": [
          {
            "name": "slb-frontend",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('subnetId')]"
              }
            }
          }
        ],
        "backendAddressPools": [
          {
            "name": "slb-backend-pool"
          }
        ],
        "loadBalancingRules": [
          {
            "name": "slb-rule",
            "properties": {
              "frontendIPConfiguration": {
                "id": "[resourceId('Microsoft.Network/loadBalancers/frontendIPConfigurations', 'snowflake-onprem-slb', 'slb-frontend')]"
              },
              "backendAddressPool": {
                "id": "[resourceId('Microsoft.Network/loadBalancers/backendAddressPools', 'snowflake-onprem-slb', 'slb-backend-pool')]"
              },
              "protocol": "Tcp",
              "frontendPort": "[parameters('databasePort')]",
              "backendPort": "[parameters('databasePort')]",
              "probe": {
                "id": "[resourceId('Microsoft.Network/loadBalancers/probes', 'snowflake-onprem-slb', 'slb-probe')]"
              },
              "enableFloatingIP": false,
              "idleTimeoutInMinutes": 4
            }
          }
        ],
        "probes": [
          {
            "name": "slb-probe",
            "properties": {
              "protocol": "Tcp",
              "port": "[parameters('databasePort')]",
              "intervalInSeconds": 5,
              "numberOfProbes": 2
            }
          }
        ]
      },
      "tags": {
        "Project": "Snowflake-PrivateLink"
      }
    },
    {
      "type": "Microsoft.Network/loadBalancers/backendAddressPools",
      "apiVersion": "2023-05-01",
      "name": "snowflake-onprem-slb/slb-backend-pool",
      "properties": {
        "loadBalancerBackendAddresses": [
          {
            "name": "onprem-database",
            "properties": {
              "ipAddress": "[parameters('onPremDatabaseIP')]",
              "virtualNetwork": {
                "id": "[variables('vnetId')]"
              }
            }
          }
        ]
      },
      "dependsOn": [
        "[resourceId('Microsoft.Network/loadBalancers', 'snowflake-onprem-slb')]"
      ]
    },
    {
      "type": "Microsoft.Network/privateLinkServices",
      "apiVersion": "2023-05-01",
      "name": "snowflake-onprem-pls",
      "location": "[variables('location')]",
      "properties": {
        "autoApproval": {
          "subscriptions": []
        },
        "visibility": {
          "subscriptions": []
        },
        "loadBalancerFrontendIpConfigurations": [
          {
            "id": "[resourceId('Microsoft.Network/loadBalancers/frontendIPConfigurations', 'snowflake-onprem-slb', 'slb-frontend')]"
          }
        ]
      },
      "dependsOn": [
        "[resourceId('Microsoft.Network/loadBalancers', 'snowflake-onprem-slb')]",
        "[resourceId('Microsoft.Network/loadBalancers/backendAddressPools', 'snowflake-onprem-slb', 'slb-backend-pool')]"
      ],
      "tags": {
        "Project": "Snowflake-PrivateLink"
      }
    },
    {
      "type": "Microsoft.Network/dnsResolvers",
      "apiVersion": "2022-07-01",
      "name": "dns-resolver-hub",
      "location": "[variables('location')]",
      "properties": {
        "virtualNetwork": {
          "id": "[variables('vnetId')]"
        }
      },
      "tags": {
        "Project": "Snowflake-PrivateLink"
      }
    },
    {
      "type": "Microsoft.Network/dnsResolvers/outboundEndpoints",
      "apiVersion": "2022-07-01",
      "name": "dns-resolver-hub/onprem-dns-outbound",
      "location": "[variables('location')]",
      "properties": {
        "subnet": {
          "id": "[variables('dnsResolverSubnetId')]"
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Network/dnsResolvers', 'dns-resolver-hub')]"
      ],
      "tags": {
        "Project": "Snowflake-PrivateLink"
      }
    },
    {
      "type": "Microsoft.Network/dnsForwardingRulesets",
      "apiVersion": "2022-07-01",
      "name": "onprem-dns-ruleset",
      "location": "[variables('location')]",
      "properties": {
        "dnsResolverOutboundEndpoints": [
          {
            "id": "[resourceId('Microsoft.Network/dnsResolvers/outboundEndpoints', 'dns-resolver-hub', 'onprem-dns-outbound')]"
          }
        ]
      },
      "dependsOn": [
        "[resourceId('Microsoft.Network/dnsResolvers/outboundEndpoints', 'dns-resolver-hub', 'onprem-dns-outbound')]"
      ],
      "tags": {
        "Project": "Snowflake-PrivateLink"
      }
    },
    {
      "type": "Microsoft.Network/dnsForwardingRulesets/forwardingRules",
      "apiVersion": "2022-07-01",
      "name": "onprem-dns-ruleset/onprem-dns-forwarding-rule",
      "properties": {
        "domainName": "[concat(parameters('onPremDomainName'), '.')]",
        "forwardingRuleState": "Enabled",
        "targetDnsServers": [
          {
            "ipAddress": "[parameters('onPremDNSServerIP1')]",
            "port": 53
          },
          {
            "ipAddress": "[parameters('onPremDNSServerIP2')]",
            "port": 53
          }
        ]
      },
      "dependsOn": [
        "[resourceId('Microsoft.Network/dnsForwardingRulesets', 'onprem-dns-ruleset')]"
      ]
    },
    {
      "type": "Microsoft.Network/dnsForwardingRulesets/virtualNetworkLinks",
      "apiVersion": "2022-07-01",
      "name": "onprem-dns-ruleset/hub-vnet-link",
      "properties": {
        "virtualNetwork": {
          "id": "[variables('vnetId')]"
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Network/dnsForwardingRulesets', 'onprem-dns-ruleset')]"
      ]
    },
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "apiVersion": "2023-05-01",
      "name": "snowflake-onprem-nsg",
      "location": "[variables('location')]",
      "properties": {
        "securityRules": [
          {
            "name": "AllowHealthProbe",
            "properties": {
              "priority": 100,
              "access": "Allow",
              "direction": "Inbound",
              "protocol": "Tcp",
              "sourceAddressPrefix": "AzureLoadBalancer",
              "sourcePortRange": "*",
              "destinationAddressPrefix": "*",
              "destinationPortRange": "[string(parameters('databasePort'))]"
            }
          },
          {
            "name": "AllowPrivateLinkService",
            "properties": {
              "priority": 110,
              "access": "Allow",
              "direction": "Inbound",
              "protocol": "Tcp",
              "sourceAddressPrefix": "VirtualNetwork",
              "sourcePortRange": "*",
              "destinationAddressPrefix": "VirtualNetwork",
              "destinationPortRange": "[string(parameters('databasePort'))]"
            }
          },
          {
            "name": "AllowToOnPremise",
            "properties": {
              "priority": 100,
              "access": "Allow",
              "direction": "Outbound",
              "protocol": "Tcp",
              "sourceAddressPrefix": "VirtualNetwork",
              "sourcePortRange": "*",
              "destinationAddressPrefix": "[concat(parameters('onPremDatabaseIP'), '/32')]",
              "destinationPortRange": "[string(parameters('databasePort'))]"
            }
          }
        ]
      },
      "tags": {
        "Project": "Snowflake-PrivateLink"
      }
    }
  ],
  "outputs": {
    "privateLinkServiceId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Network/privateLinkServices', 'snowflake-onprem-pls')]",
      "metadata": {
        "description": "CRITICAL: Provide this Resource ID to your Snowflake administrator for SYSTEM$PROVISION_PRIVATELINK_ENDPOINT"
      }
    },
    "privateLinkServiceAlias": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Network/privateLinkServices', 'snowflake-onprem-pls')).alias]",
      "metadata": {
        "description": "CRITICAL: Provide this alias to your Snowflake administrator for network rule configuration"
      }
    },
    "loadBalancerPrivateIP": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Network/loadBalancers', 'snowflake-onprem-slb')).frontendIPConfigurations[0].properties.privateIPAddress]",
      "metadata": {
        "description": "Private IP address of the internal load balancer frontend"
      }
    },
    "loadBalancerId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Network/loadBalancers', 'snowflake-onprem-slb')]",
      "metadata": {
        "description": "Resource ID of the load balancer"
      }
    },
    "nsgId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Network/networkSecurityGroups', 'snowflake-onprem-nsg')]",
      "metadata": {
        "description": "Resource ID of the network security group"
      }
    },
    "dnsResolverOutboundEndpointId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Network/dnsResolvers/outboundEndpoints', 'dns-resolver-hub', 'onprem-dns-outbound')]",
      "metadata": {
        "description": "Resource ID of the DNS resolver outbound endpoint"
      }
    },
    "dnsForwardingRulesetId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Network/dnsForwardingRulesets', 'onprem-dns-ruleset')]",
      "metadata": {
        "description": "Resource ID of the DNS forwarding ruleset"
      }
    }
  }
}
